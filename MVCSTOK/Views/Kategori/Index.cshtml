@using MVCSTOK.Models.EntityFramework
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKATEGORILER>
@{
    ViewBag.Title = "KategoriIndex";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Güncelleme</th>
        <th>Sil</th>
    </tr>


    @foreach (var item in Model)
    {
<tr>
    <th>
        @item.KATEGORIID
    </th>

    <td>
        @item.KATEGORIADI
    </td>
    <td><a href="/Kategori/KategoriGetir/@item.KATEGORIID" class="btn btn-warning">Güncelleme</a></td>
    <td><a href="/Kategori/SIL/@item.KATEGORIID" class="btn btn-danger">Sil</a> </td>

</tr>

    }

</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index" ,new { sayfa } ))

<a href="/Kategori/YeniKategori/" class="btn btn-success">Yeni Kategori ekle</a>