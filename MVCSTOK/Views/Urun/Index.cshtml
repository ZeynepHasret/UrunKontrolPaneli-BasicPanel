@using MVCSTOK.Models.EntityFramework
@model List<URUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<table id="tbl" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Güncelleme</th>
            <th>Sil</th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th>@item.URUNID</th>
                <td>@item.URUNADI</td>
                <td>@item.MARKA</td>
                <td>@item.TBLKATEGORILER.KATEGORIADI</td>
                <td>@item.FIYAT</td>
                <td>@item.STOK</td>
                <td><a href="/Urun/UrunGetir/@item.URUNID" class="btn btn-warning">Güncelleme</a></td>
                <td><a href="/Urun/SIL/@item.URUNID" class="btn btn-danger">Sil</a> </td>
            </tr>
        }
    </tbody>

</table>
<a href="/Urun/YeniUrun/" class="btn btn-success">Yeni Ürün ekle</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<script type="text/javascript" charset="utf8"
        src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.js"></script>

<script>
    $('#tbl').DataTable();
</script>